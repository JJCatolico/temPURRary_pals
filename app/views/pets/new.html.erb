<%= form_with(model: @pet, local: true, html: { multipart: true }) do |form| %>
  <% if @pet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pet.errors.count, "error") %> prohibited this pet from being saved:</h2>

      <ul>
      <% @pet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %> <br>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %> <br>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :city %> <br>
    <%= form.text_field :city %>
  </div>

  <div class="field">
    <%= form.label :state %> <br>
    <%= form.text_field :state %>
  </div>

  <div class="field">
    <%= form.label :price %> <br>
    <%= form.number_field :price %>
  </div>

  <div class="image_field">
    <%= form.label :avatar %> <br>
    <%= form.file_field :avatar, :class => "image_button" %>
  </div>

  <div class="actions">
    <%= form.submit 'Upload Cat', :class => 'submit_button' %>
  </div>
<% end %>
