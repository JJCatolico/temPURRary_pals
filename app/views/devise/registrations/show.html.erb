<div class="user_page">

  <div class="user_info">
    <h2><%= @user.first_name %> <%= @user.last_name %></h2>
    <div class="prof_img" style='background-image: url("<%= @user.avatar.url %>")'>

    </div>
    <p><strong>Email:</strong> <%= @user.email %></p>
    <p> <%= link_to 'Edit', edit_user_registration_path(@user), :class => 'link' %></p>
  </div>

  <h2 class="form_head"> My Cats </h2>
  <div class="user_block">

      <% @pets.each do |pet| %>
        <div class="user_pet">
          <p><strong> Name: </strong><%= pet.name %></p>
          <div class="cat_img" style='background-image: url("<%= pet.avatar.url %>")'>

          </div>

          <p><strong>Location:</strong> <%= pet.city %>, <%= pet.state %></p>
          <p><strong>Price (per hour):</strong> $<%= pet.price %></p>

          <%= link_to 'View', pet_path(pet), :class => 'link' %>
        </div>

      <% end %>
  </div>

  <h2 class="form_head"> Upcoming Reservations </h2>
  <div class="user_block">

    <% @reservations.each do |reservation| %>
      <% if reservation.date.strftime("%m / %d / %Y") > Date.today.strftime("%m / %d / %Y") %>
        <div class="user_pet user_res">
          <p><strong> Reservation Date: </strong><br>
            <%= reservation.date.strftime("%m / %d / %Y") %></p>

          <p><strong>Name:</strong> <%= reservation.pet.name %> </p>
          <div class="cat_img" style='background-image: url("<%= reservation.pet.avatar.url %>")'>

          </div>

          <p><strong>Location:</strong> <%= reservation.pet.city %>, <%= reservation.pet.state %> </p>
          <p><strong>Price (Per Hour):</strong> $<%= reservation.pet.price %> </p>

          <%= link_to 'View', reservation_path(reservation), :class => 'link' %>
        </div>
      <% end %>
    <% end %>

  </div>

  <h2 class="form_head"> Past Reservations </h2>
  <div class="user_block">

    <% @reservations.each do |reservation| %>
      <% if reservation.date.strftime("%m / %d / %Y") < Date.today.strftime("%m / %d / %Y") %>
        <div class="user_pet user_res">
          <p><strong> Reserved On: </strong><br>
            <%= reservation.date.strftime("%m / %d / %Y") %></p>

          <p><strong>Name:</strong> <%= reservation.pet.name %> </p>
          <div class="cat_img" style='background-image: url("<%= reservation.pet.avatar.url %>")'>

          </div>

          <p><strong>Location:</strong> <%= reservation.pet.city %>, <%= reservation.pet.state %> </p>
          <p><strong>Price (Per Hour):</strong> $<%= reservation.pet.price %> </p>

          <%= link_to 'View', reservation_path(reservation), :class => 'link' %>
        </div>

      <% end %>
    <% end %>

  </div>

</div>
